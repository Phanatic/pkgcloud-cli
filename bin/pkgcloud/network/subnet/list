#!/usr/bin/env node
var program = require('commander');
var helpers = require('../../../../helpers');
var table = require('cli-table');

program
  .option('-c, --config <path>', 'set config path [./cloud.json]')
  .parse(process.argv);

var config = program.config;
if (!config) {
  config = process.env['HOME']+'/pkgcloud-cli.json';
}

var outputSubnets = function(err, subnets) {
  if (err) {
    console.log(err);
    process.exit(1);
  }

  var tbl = new table(helpers.getSubnetTableDefinition());
  for (var iter in subnets) {
    var subnet = subnets[iter];
    var data = helpers.getSubnetRow(subnet);
    tbl.push(data);
  }

  console.log(tbl.toString());
};

helpers.init(config, helpers.CLIENT_TYPES.network, function(err, cloud) {
  cloud.getSubnets(outputSubnets);
});
