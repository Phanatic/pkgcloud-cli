#!/usr/bin/env node
var program = require('commander');
var helpers = require('../helpers');
var table = require('cli-table');

program
  .option('-c, --config <path>', 'set config path [./cloud.json]')
  .parse(process.argv);

var config = program.config;
if (!config) {
  config = process.env['HOME']+'/pkgcloud-cli.json';
}

var outputNetworks = function(err, networks) {
  if (err) {
    console.log(err);
    process.exit(1);
  }
  var tbl = new table({
    head: ['ID', 'NAME', 'Status', 'Admin State Up', 'Tenant ID', 'Shared'],
    colWidths: [15, 30, 10, 10, 10]
  });
  for (var iter in networks) {
    var ntwrk = networks[iter];
    var data = [
      ntwrk.id,
      ntwrk.name || 'N/A',
      ntwrk.status || 'N/A',
      ntwrk.adminStateUp || 'N/A',
      ntwrk.tenantId || 'N/A',
      ntwrk.shared || 'N/A'];
    tbl.push(data);
  }
  console.log(tbl.toString());
};

helpers.init(config, helpers.CLIENT_TYPES.network, function(err, cloud) {
  cloud.getNetworks(outputNetworks);
});
