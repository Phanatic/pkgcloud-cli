#!/usr/bin/env node
var program = require('commander');
var helpers = require('../helpers');
var table = require('cli-table');
var dateFormat = require('dateFormat');

program
  .option('-c, --config <path>', 'set config path [./cloud.json]')
  .option('-r, --region <region>', 'List images from this region')
  .parse(process.argv);

var config = program.config;
if (!config) {
  config = process.env['HOME']+'/pkgcloud-cli.json';
}

helpers.init(config, function(err, cloud) {
  cloud.getImages(function(err, regions) {
    if (err) {
      console.log(err);
      process.exit(1);
    }
    for (var reg in regions) {
      var tbl = new table({
        head: ['ID', 'NAME', 'CREATED', 'UPDATED', 'STATUS', 'PROGRESS'],
        colWidths: [40, 50, 22, 22, 10, 10]
      });
      console.log('================================');
      console.log('Region: '+reg);
      var images = regions[reg];
      for (var iter in images) {
        var img = images[iter];
        var data = [
          img.id,
          img.name,
          dateFormat(img.created, 'yyyy-mm-dd h:MM:ss') || 'N/A',
          dateFormat(img.update, 'yyyy-mm-dd h:MM:ss') || 'N/A',
          img.status || 'N/A',
          img.progress|| 'N/A'
        ];
        tbl.push(data);
      }
      console.log(tbl.toString());
    }
  });
});


